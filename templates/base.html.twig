<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Admin Demo{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">

        {# Prevent flash of wrong theme on page load #}
        <script>
            (function() {
                var theme = localStorage.getItem('theme') || 'system';
                var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                if (theme === 'dark' || (theme === 'system' && prefersDark)) {
                    document.documentElement.classList.add('dark');
                }
            })();
        </script>

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-gray-100 dark:bg-gray-900 min-h-screen text-gray-900 dark:text-gray-100 transition-colors duration-200">
        <nav class="bg-gray-800 dark:bg-gray-950 text-white py-4 mb-8">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
                <div class="flex gap-2 sm:gap-4 items-center">
                    <a href="{{ path('admin_home') }}"
                       class="px-3 sm:px-4 py-2 rounded-md transition-colors duration-150 hover:bg-gray-700 dark:hover:bg-gray-800 text-sm sm:text-base {{ app.request.get('_route') == 'admin_home' ? 'bg-blue-600 dark:bg-blue-500' : '' }}">
                        Custom Home
                    </a>
                    <a href="{{ path('app_admin_dashboard') }}"
                       class="px-3 sm:px-4 py-2 rounded-md transition-colors duration-150 hover:bg-gray-700 dark:hover:bg-gray-800 text-sm sm:text-base {{ app.request.get('_route') starts with 'app_admin' ? 'bg-blue-600 dark:bg-blue-500' : '' }}">
                        Bundle Admin
                    </a>
                </div>

                {# Theme Toggle Button #}
                <div data-controller="theme">
                    <button data-theme-target="button"
                            data-action="click->theme#toggle"
                            class="flex items-center gap-2 px-3 py-2 rounded-md bg-gray-700 dark:bg-gray-800 hover:bg-gray-600 dark:hover:bg-gray-700 transition-colors duration-150"
                            title="Toggle theme">
                        <span data-theme-target="icon">üíª</span>
                        <span data-theme-target="label" class="text-sm hidden sm:inline">System</span>
                    </button>
                </div>
            </div>
        </nav>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {% if block('headerTitle') is defined or block('headerButtons') is defined %}
                <div class="flex justify-between items-center mb-6">
                    <div class="text-2xl font-bold text-gray-900 dark:text-gray-100">
                        {% block headerTitle %}{% endblock %}
                    </div>
                    <div>
                        {% block headerButtons %}{% endblock %}
                    </div>
                </div>
            {% endif %}
            {% block content %}
                {% block body %}{% endblock %}
            {% endblock %}
        </div>
    </body>
</html>
