{# Custom boolean rendering with colored badges #}
{% if value is same as(true) %}
    <span class="inline-block px-2 py-1 bg-green-600 dark:bg-green-500 text-white text-sm rounded">
        Yes
    </span>
{% elseif value is same as(false) %}
    <span class="inline-block px-2 py-1 bg-red-600 dark:bg-red-500 text-white text-sm rounded">
        No
    </span>
{% else %}
    <span class="inline-block px-2 py-1 bg-gray-500 dark:bg-gray-600 text-white text-sm rounded">
        Unknown
    </span>
{% endif %}
